<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Nagłówek -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DevStudy Sync"
        android:textSize="32sp"
        android:letterSpacing="0.02"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <!-- Przycisk 1: Zadania -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zarządzaj zadaniami"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_tasks"
        app:iconTint="@android:color/white"
        app:iconPadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="40dp" />

    <!-- Przycisk 2: Wiedza -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/knowledgeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Repozytorium wiedzy"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:backgroundTint="#6A5ACD"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_book"
        app:iconTint="@android:color/white"
        app:iconPadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="20dp" />

    <!-- ✅ Przycisk 3: Statystyki -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/statsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Statystyki"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:backgroundTint="#3CB371"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_stats"
        app:iconTint="@android:color/white"
        app:iconPadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/knowledgeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
